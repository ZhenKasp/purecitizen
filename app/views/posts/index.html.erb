<h1>All posts</h1>
<% @post.each do |post| %>
  <div class="alert alert-dark">
    <h3><%= post.title %></h3>
    <p>
      <%= image_tag post.image.url %>
      <br>
      <%= truncate(simple_format(post.body), escape: false, length:75, separator: ' ') %>
    </p>
    <%= link_to "Читать далее", post_path(post), :class => "btn btn-outline-primary" %>
  </div>
<% end %>
