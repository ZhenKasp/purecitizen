<h1>New post</h1>
<%= form_for :post, url: posts_path, html: { multipart: true } do |f| %>



<p>Name
  <br>
  <%= f.text_field(:title, {:class => 'form-control'}) %>
</p>
<p>Text
  <br>
  <%= f.text_area(:body, {:class => 'form-control'}) %>
</p>
<p>
  <%= f.submit({:class => 'btn btn-success'}) %>
</p>
<% end %>
